{% apply spaceless %}
  {% for element in elements %}
    {% tag 'li' with {
      class: element.id in disabledElementIds ? 'disabled' : null,
      data: {
        id: element.id,
      },
    } %}
      {{ elementCard(element, {
        context: context ?? 'index',
        selectable: selectable,
        sortable: sortable,
      }) }}
    {% endtag %}
  {% endfor %}
{% endapply -%}
