<div class="missing-component pane">
    <p class="error">{{ error }}</p>
    {% if showPlugin %}
        <div class="install-plugin">
            <div class="icon" aria-hidden="true">
                {% if iconUrl %}
                    <img src="{{ iconUrl }}" alt="">
                {% else %}
                    {{ svg(iconSvg, sanitize=true, namespace=true) }}
                {% endif %}
            </div>
            <div class="flex">
                <h3>{{ name }}</h3>
                {% if isComposerInstalled %}
                    {% if isInstalled %}
                        <button type="button" class="btn formsubmit" data-formsubmit="x" data-action="plugins/enable-plugin" data-param="pluginHandle" data-value="{{ handle }}">{{ 'Enable'|t('app') }}</button>
                    {% else %}
                        <button type="button" class="btn formsubmit" data-formsubmit="x" data-action="plugins/install-plugin" data-param="pluginHandle" data-value="{{ handle }}">{{ 'Install'|t('app') }}</button>
                    {% endif %}
                {% else %}
                    <a class="btn" href="{{ url('plugin-store/'~handle) }}">{{ 'Install'|t('app') }}</a>
                {% endif %}
            </div>
        </div>
    {% endif %}
</div>
