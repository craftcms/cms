{% set attributes = attributes ?? {} %}
{% set controls = controls ?? null %}
{% set expanded = expanded ?? 'true' %}
{% set content = (content ?? block('content') ?? '')|trim %}

{% if controls %}
    <craft-disclosure id="{{ id ?? null }}">
        <button
            type="button"
            aria-controls="{{ controls }}"
            aria-expanded="{{ expanded }}"
            {{ attr(attributes) }}
        >
            {{ content | raw }}
        </button>
    </craft-disclosure>
{% endif %}
